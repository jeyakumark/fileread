<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "org.opendatakit.freespeech"
    version   = "0.8.6">


    <name>FreeSpeech</name>

    <description>
        App for guiding, recording and annotating interviews.
    </description>

    <author>
        Nathan Breit, Trevor Perrier, Fahad Pervaiz
    </author>

    <preference name="phonegap-version" value="3.3.0" />
     
    <icon src="boilerplate/cassette.png" />
    
    <!-- <gap:splash src="splash.png" width="310" height="300" /> -->
    
    <!-- Child browser is used for dropbox authentication -->
    <gap:plugin name="ChildBrowser" />
    
    <preference name="permissions" value="none"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    
</widget>
